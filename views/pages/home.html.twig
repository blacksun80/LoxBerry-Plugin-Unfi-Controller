{% extends 'pages/templates/adminBasePage.html.twig' %}


{% block body %}
	<div class="wide">UniFi Controller status</div>
	<p></p>
	<!-- info -->
	<div class="lb_flex-container">
		<div class="lb_flex-item-label">
			<label class="control-label">Service status</label>
		</div>
		<div class="lb_flex-item-spacer"></div>
		<div class="lb_flex-item">
			{{unifi_data.status}}
		</div>
		<div class="lb_flex-item-spacer"></div>
		<div class="lb_flex-item-help hint">
			Status of the unifi controller service
		</div>
		<div class="lb_flex-item-spacer"></div>
	</div>

	<div class="lb_flex-container">
		<div class="lb_flex-item-label">
			<label class="control-label">Container version</label>
		</div>
		<div class="lb_flex-item-spacer"></div>
		<div class="lb_flex-item">
			{{unifi_data.containerVersion}}

		</div>
		<div class="lb_flex-item-spacer"></div>
		<div class="lb_flex-item-help hint">
			Version of the container that contains the unifi controller software.
			<p>
				The container version can be changed below.
			</p>
		</div>
		<div class="lb_flex-item-spacer"></div>
	</div>

	<div class="lb_flex-container">
		<div class="lb_flex-item-label">
			<label class="control-label">Controller version</label>
		</div>
		<div class="lb_flex-item-spacer"></div>
		<div class="lb_flex-item">
			{{unifi_data.version}}
		</div>
		<div class="lb_flex-item-spacer"></div>
		<div class="lb_flex-item-help hint">
			Version of the unifi controller. If the version is unknown than the service may have a problem.
			<p>
				check the logfiles
			</p>
		</div>
		<div class="lb_flex-item-spacer"></div>
	</div>

	<div class="wide">Settings</div>
	<p>
		<i>In this section you can change the version of the unifi controller container</i>

	</p>
	<form id="ServiceConfig">

		<div class="lb_flex-container">
			<div class="lb_flex-item-label">
				<label class="control-label">Container version</label>
			</div>
			<div class="lb_flex-item-spacer"></div>
			<div class="lb_flex-item">
				<div class="ui-select ui-mini">
					<select id="changeVersion" name="CONFIG.version" data-mini="true" selected="selcted">
						{% for version in versions %}
							<option value="{{version}}">{{version}}</option>
						{% endfor %}
					</select>

				</div>
			</div>
			<div class="lb_flex-item-spacer"></div>
			<div class="lb_flex-item-help hint">
				<button type="submit" name="btnsubmit" id="btnsubmit" data-role="button" data-inline="true" data-mini="true" data-icon="check" class=" ui-btn ui-icon-check ui-btn-icon-left ui-btn-inline ui-shadow ui-corner-all ui-mini">Change container version</button>
			</div>
		</div>
	</form>

	<div class="wide">Webinterface</div>
	<p>
		<i>{{ trans('home.home_explanation') }}</i>
	</p>
	<a href="{{unifi_url}}" target="_blank" class="ui-btn" id="openui" data-inline="true">{{ trans('home.open_ui')}}</a>
{% endblock %}
